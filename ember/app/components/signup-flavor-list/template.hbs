{{ signup-flavor
  signup=signup
  item=featured
  featured=true
  add=add
  remove=remove
}}


{{#liquid-spacer class="flavor-list-animate" growDuration=500}}

  <div class="flavor-list">
    <h4 {{ action 'openListOne' }}>CHOOSE FROM OUR FLAVORS {{ fa-icon icon="chevron-up" rotate=rotateOne }}</h4>

    {{#if listOneOpen}}

      <p>Click on any flavor for a product description and to select the sample size youâ€™d like to receive:</p>

      {{#each categories as |category|}}
        <h5>{{category.name}}</h5>
        {{#each category.flavors as |flavor|}}
          {{ signup-flavor
            signup=signup
            item=flavor
            add=add
            remove=remove
          }}
        {{/each}}
      {{/each}}

    {{/if}}
  </div>

{{/liquid-spacer}}


<div class="buttons">
  <button class="submit back" {{ action back }}>back</button>
  <button class="submit" {{ action save signup}}>submit</button>

</div>
