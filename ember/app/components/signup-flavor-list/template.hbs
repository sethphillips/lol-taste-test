{{ signup-flavor
  signup=signup
  item=featured
  featured=true
  add=add
  remove=remove
}}



{{#liquid-spacer class="flavor-list-animate" growDuration=500}}

  <div class="flavor-list">
    <h4 {{ action 'openListOne' }}>SPRAY-DRIED DAIRY POWDERS {{ fa-icon icon="chevron-up" rotate=rotateOne }}</h4>

    {{#if listOneOpen}}

      <p>Click on any spray-dried dairy powder for a product description and to select the sample size you’d like to receive:</p>

      <h5>Cheddar Cheese Powders</h5>
      {{#each cheeseNormal as |flavor|}}
        {{ signup-flavor
          signup=signup
          item=flavor
          add=add
          remove=remove
        }}
      {{/each}}



      <h5>Triple Color</h5>
      {{#each cheeseTriple as |flavor|}}
        {{ signup-flavor
          signup=signup
          item=flavor
          add=add
          remove=remove
        }}
      {{/each}}



      <h5>White</h5>
      {{#each cheeseWhite as |flavor|}}
        {{ signup-flavor
          signup=signup
          item=flavor
          add=add
          remove=remove
        }}
      {{/each}}


      <h5>Varietal</h5>
      {{#each cheeseVarietal as |flavor|}}
        {{ signup-flavor
          signup=signup
          item=flavor
          add=add
          remove=remove
        }}
      {{/each}}

    {{/if}}
  </div>

{{/liquid-spacer}}


{{#liquid-spacer class="flavor-list-animate" growDuration=500}}

  <div class="flavor-list">
    <h4 {{ action 'openListTwo' }}>DRY-BLENDED SEASONINGS {{ fa-icon icon="chevron-up" rotate=rotateOne }}</h4>

    {{#if listTwoOpen}}

      <p>Click on any dry-blended seasoning for a product description and to select the sample size you’d like to receive:</p>

      <h5>Distinctive Flavors</h5>
      {{#each seasoningDistinctive as |flavor|}}
        {{ signup-flavor
          signup=signup
          item=flavor
          add=add
          remove=remove
        }}
      {{/each}}



      <h5>Nacho</h5>

      {{#each seasoningNacho as |flavor|}}
        {{ signup-flavor
          signup=signup
          item=flavor
          add=add
          remove=remove
        }}
      {{/each}}


      <h5>Sour Cream</h5>
      {{#each seasoningSourCream as |flavor|}}
        {{ signup-flavor
          signup=signup
          item=flavor
          add=add
          remove=remove
        }}
      {{/each}}

    {{/if}}
  </div>

{{/liquid-spacer}}

<div class="buttons">
  <button class="submit back" {{ action back }}>back</button>
  <button class="submit" {{ action save signup}}>submit</button>

</div>
